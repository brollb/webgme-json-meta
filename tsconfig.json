{
  "compilerOptions": {
    "module": "umd",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "rootDir": "./lib",
    "allowJs": false,
    "esModuleInterop": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "lib/build", "**/src", "**/test", "**/config"],
  }
}
