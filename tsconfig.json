{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "lib/build/wji.js",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["lib/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "lib/build", "**/src", "**/test", "**/config"],
  }
}